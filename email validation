import re
def fun(s):
    #spliting the input to three different parts
    s.split('@')
    if re.match("[a-zA-Z0-9-_]",s.split('@')[0]).group():
        return True
    else:
        return False

#to check the text after the @ and .
    if re.match("[a-zA-Z0-9]",s.split('@')[1]).group():
        return True
    else:
        return False

#to extract text after the .
    s.split('.')
    if len(s.split('.')[1]) > 3:
        return True
    else:
        return False




