import re

def fun(emails):
    #using  the filter function to carry out basic checks
    fil = []
    fil_2 = []
    fil_3 = []
    fil_4 = []
    fil_5 = []
    fil_6 = []

    for i in emails:
        i = list(filter(lambda emails: emails.count('@') == 1, emails))
        fil = i

    for i in fil:
        i = list(filter(lambda fil: fil.count('.') == 1, fil))
        fil_2 = i

    for i in fil_2:
        i = list(filter(lambda fil_2: ' ' not in fil_2, fil_2))
        fil_3 = i

    for i in fil_3:
        #extracting the user name
        i.split('@')
        user_name = i.split('@')[0]
        fil_4 = list(filter(lambda user_name: re.search('[;:*()#$%[\]/\\\'\",.!~` {}|?]', user_name), user_name))

        #extracting the website name
        web = i.split('@')[1]
        web.split('.')
        website = web.split('.')[0]
        fil_5 = list(filter(lambda website: re.search('[;:*()#$%[\]/\\\'\",.!~` {}|?]', website), website))

        #extracting the domain name.
        i.split('.')
        domain = i.split('.')[1]
        fil_6 = list(filter(lambda domain: re.search('[;:*()#$%[\]/\\\'\",.!~` {}|?]', domain), domain))

    return fil_3

emails = ['3','lara@hackerrank.com','brian-23@hackerrank.com','britts_54@hackerrank.com']

print(fun(emails))
